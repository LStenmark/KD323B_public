<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.k3.lecture_4_examples_adapter_extra.FragmentSpinners"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLANET"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/planetnamn"
        android:textColor="#ffffffff" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/planetbild"
                    android:src="@drawable/vena"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Radius"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/planetstuff"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffffff"
                    android:id="@+id/WhatWasThis"

                    android:layout_gravity="center_horizontal"
                    android:text="Temperatur"/>

            </LinearLayout>
        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_marginTop="20dp"
            android:background="#ff232323">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_margin="10dp"
                android:id="@+id/scroll_lol"
                android:text="Ont det gör ont en stund på natten men inget på dan..."
                 />
        </ScrollView>
    </TableLayout>

</LinearLayout>

